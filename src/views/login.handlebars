<form style="max-width: 300px; margin: 0 auto;">
  <h2 style="text-align: center;">Login</h2>
  <label for="email">Email:</label>
  <input
    type="email"
    id="email"
    name="email"
    placeholder="Email"
    style="width: 100%; padding: 8px; margin-bottom: 10px;"
  />
  <label for="password">Password:</label>
  <input
    type="password"
    id="password"
    name="password"
    placeholder="*******"
    style="width: 100%; padding: 8px; margin-bottom: 10px;"
  />
</form>