<h2>{{product.title}}</h2>
{{#if product.thumbnails.length}}
  <h3>Images:</h3>
  <div>
    {{#each product.thumbnails}}
      <div>
        <img src="{{this.reference}}" alt="{{this.name}}" style="width:100px; height:auto;">
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No images available</p>
{{/if}}
<p>Description: {{product.description}}</p>
<p>Price: {{product.price}}</p>
<p>Status: {{product.status}}</p>
<p>Stock: {{product.stock}}</p>
<p>Category: {{product.category}}</p>

{{#if user}}
  <button
    id="addToCartBtn"
    data-product-id="{{product._id}}"
    style="background-color: #4CAF50; color: white; padding: 10px; border: none; border-radius: 5px; width: 100%; cursor:pointer; margin-top:10px"
  >Agregar al carrito</button>
{{/if}}

<script src="/js/addProdToCart.js"></script>